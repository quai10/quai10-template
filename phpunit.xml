<?xml version="1.0"?>
<phpunit bootstrap="bootstrap.php">
    <filter>
        <whitelist>
            <directory>lib/</directory>
            <exclude>
                <file>lib/cleanup.php</file>
                <file>lib/config.php</file>
                <file>lib/contact.php</file>
            </exclude>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite>
            <directory>tests/</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="coverage/"/>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
</phpunit>
